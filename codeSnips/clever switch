// Clever way of finding an appropriate case
// Selects the first detected true statement
// It's weird, but code can be run within the regular brackets

_value = 20;
switch (true) do {
	case ( position player distance [0,0,0] > 5 ): {hint "third case";};
	case ( _value == 0 && alive player ): {hint "first case";};
	case ( _value <= 30 && alive player ): {hint "second case";};
};

 